@model Category
@{
    ViewData["Title"] = "Edit";
}


<div class="text-center" >
  <h2 class="fw-bold" style="margin:20px">Edit category</h2>
</div>

<form method="post" asp-action="Edit">
  <div class="mb-3">
    <label asp-for="Name" class="form-label">Category Name</label>
    @*trường Name tự điền khi nhân Edit là do asp-for thêm vào*@
    <input type="text" class="form-control" asp-for="Name" >
    <span asp-validation-for="Name" class="text-danger"></span>
  </div>
  <div class="mb-3">
    <label asp-for="Detail" class="form-label">Category Description</label>
    <textarea class="form-control" asp-for="Detail"></textarea>
    <span asp-validation-for="Detail" class="text-danger"></span>
  </div>
  <div class="text-center">
    <button type="submit" class="btn btn-primary me-2">Edit Category</button>
    <a asp-controller="Category" asp-action="Index" class="btn btn-secondary">Back to List</a>
  </div>
</form>

@*bước xác thực thưc hiện bên phía client (không cần load lại trang vì ko cần xác thực bên server nếu không cần thiết)*@

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial.cshtml" />
    }
}
