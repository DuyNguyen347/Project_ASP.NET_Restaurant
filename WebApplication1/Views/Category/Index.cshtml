@model List<Category>
@{
    ViewData["Title"] = "Index";
}

<partial name="_Notification" />


<div class="container p-3">
    <div class = "row pt-4">
        <div class = "col-6">
            <h2 class="text-primary">Category list</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-outline-primary">Create Category</a>
        </div>
    </div>
</div>

<table class = "table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Create At</th>
            <th>Detail</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class = "table-secondary">
                <td width="10%">@item.Id</td>
                <td width="30%">@item.Name</td>
                <td width="30%">@item.CreatAt</td>
                <td width="30%">@item.Detail</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary mx-2">Edit</a>
                    </div>
                </td>
                <td>
                     <div class="w-75 btn-group" role="group">
                         <form method="post" asp-controller="Category" asp-action="DeletePost" asp-route-id="@item.Id" >
                            <button type="submit" class="btn btn-primary mx-2">Delete</button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
