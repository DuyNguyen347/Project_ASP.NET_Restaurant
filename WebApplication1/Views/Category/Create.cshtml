@model Category
@{
    ViewData["Title"] = "Create";
}


<div class="text-center" >
  <h2 class="fw-bold" style="margin:20px">Create category</h2>
</div>

<div asp-validation-summary="All"></div>
<form method="post">
  <div class="mb-3">
    <label asp-for="Name" class="form-label">Category Name</label>
    <input type="text" class="form-control" asp-for="Name" placeholder="Enter category name">
    <span asp-validation-for="Name" class="text-danger"></span>
  </div>
  <div class="mb-3">
    <label asp-for="Detail" class="form-label">Category Description</label>
    <textarea class="form-control" asp-for="Detail" placeholder="Enter category description"></textarea>
    <span asp-validation-for="Detail" class="text-danger"></span>
  </div>
  <div class="text-center">
    <button type="submit" class="btn btn-primary me-2">Create Category</button>
    <a asp-controller="Category" asp-action="Index" class="btn btn-secondary">Back to List</a>
  </div>
</form>

